{
  "name": "okjiasu_action",
  "version": "1.0.0",
  "description": "基于github工作流的okjiasu.com签到脚本。可白嫖流量！",
  "main": "index.js",
  "scripts": {
    "serve": "node index.js",
    "free": "node package/okjiasu/free.js",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js}\"",
    "eslint": "npx eslint --cache --fix --ext .js,.jsx,.ts,.tsx ./"
  },
  "keywords": [
    "h7ml",
    "okjiasu",
    "github",
    "action"
  ],
  "author": "h7ml <h7ml@qq.com>",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/h7ml/okjiasu_action.git"
  },
  "homepage": "https://github.com/h7ml/okjiasu_action.git",
  "dependencies": {
    "axios": "^1.1.3",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.1",
    "expect-puppeteer": "^6.1.1",
    "husky": "^8.0.2",
    "node-json-db": "^2.1.0",
    "nodemailer": "^6.7.7",
    "puppeteer": "^19.2.2",
    "qrcode": "^1.5.1"
  },
  "devDependencies": {
    "@dext7r/cz-config": "^1.0.4",
    "@dext7r/eslint-config": "^1.0.0",
    "@dext7r/prettier": "^0.0.9",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^7.0.0",
    "lint-staged": "13.0.3",
    "open-url-by-browser": "1.0.1",
    "prettier": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "prettier": "prettier",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
